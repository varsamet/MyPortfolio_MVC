@model List<MyPortfolio_MVC.Models.TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Eğitim Hayatim</h2>

<br />

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Okul Adi</th>
        <th>Bölüm Adi</th>
        <th>Başlangıç</th>
        <th>Bitiş</th>
        <th>Derece</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.SchollName</td>
            <td>@item.Department</td>
            <td>@item.StartDate.Value.ToShortDateString()</td>
            <td>@(String.IsNullOrEmpty(item.EndDate?.ToString()) ? "Devam Ediyor" : item.EndDate?.ToShortDateString()) </td>
            <td>@item.EndDate.Value.ToShortDateString()</td>
            <td>
                @if (item.EndDate == null)
                {
                    <span class="badge bg-warning text-dark">
                        Eğitim Devam Ediyor
                    </span>
                }
                else
                {
                    <span class="badge bg-success">
                        Mezun
                    </span>
                }
            </td>
            <td>@item.Degree</td>
            <td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Education/CreateEducation" class="btn btn-outline-success">Yeni Eğitim Ekle</a>

<br />
<br />

<div class="alert alert-warning text-center">
    <i class="fa fa-info-circle"></i>
    Eğitim bilgisi bulunamadı.
</div>